{
	"name": "twinkle-idwiki",
	"version": "1.0.0",
	"description": "",
	"private": true,
	"scripts": {
		"format": "prettier --write .",
		"lint": "eslint . --ext .js --ext .ts",
		"lint:fix": "eslint . --ext .js --ext .ts --fix",
		"build": "grunt build",
		"quickbuild": "webpack",
		"start": "node scripts/server.js",
		"deploy": "npm run build && node scripts/deploy.js",
		"test:prod": "webpack && jest",
		"test": "env DEBUG=true webpack && jest -i",
		"test:unit": "webpack && jest --selectProjects unit",
		"test:integration": "webpack && jest --selectProjects integration",
		"test:integration:setup": "npm i --no-save playwright@1.9.1 && cd tests/integration/docker && bash main.sh",
		"test:integration:teardown": "cd tests/integration/docker && docker-compose down"
	},
	"repository": {
		"type": "git",
		"url": "git://github.com/kenrick95/twinkle-idwiki.git"
	},
	"author": "kenrick95",
	"license": "CC-BY-SA-3.0",
	"homepage": "https://github.com/kenrick95/twinkle-idwiki",
	"sideEffects": [
		"src/globals.ts"
	],
	"dependencies": {
		"tslib": "2.3.1",
		"twinkle-core": "^3.1.3"
	},
	"devDependencies": {
		"@babel/core": "^7.16.5",
		"@babel/preset-env": "^7.16.5",
		"@types/chai": "^4.3.0",
		"@types/chai-as-promised": "^7.1.4",
		"@types/jest": "^26.0.22",
		"@typescript-eslint/eslint-plugin": "^5.8.0",
		"@typescript-eslint/parser": "^5.8.0",
		"babel-loader": "^8.2.3",
		"browserslist-config-wikimedia": "^0.2.0",
		"chai": "^4.3.4",
		"chai-as-promised": "^7.1.1",
		"chalk": "^4.1.0",
		"diff": "^5.0.0",
		"eslint": "^8.5.0",
		"grunt": "^1.4.1",
		"grunt-contrib-clean": "^2.0.0",
		"grunt-contrib-concat": "^2.0.0",
		"grunt-contrib-copy": "^1.0.0",
		"grunt-replace": "^2.0.2",
		"grunt-webpack": "^5.0.0",
		"husky": "^4.3.7",
		"jest": "^26.6.3",
		"jest-playwright-preset": "^1.5.1",
		"lint-staged": "^10.5.3",
		"minimist": "^1.2.5",
		"mock-mediawiki": "^1.3.0",
		"mwn": "^1.11.4",
		"prettier": "^2.5.1",
		"prompts": "^2.4.2",
		"ts-jest": "^26.5.5",
		"ts-loader": "9.2.6",
		"typescript": "4.5.4",
		"webpack": "^5.65.0",
		"webpack-cli": "^4.9.1",
		"webpack-dev-server": "^4.7.1"
	},
	"browserslist": [
		"extends browserslist-config-wikimedia/modern"
	],
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.ts(x)?": "prettier --write"
	}
}
